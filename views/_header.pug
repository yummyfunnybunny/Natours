header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    //- show user name, photo, and logout button if logged in
    if user
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    //- show login and signup button if not logged in
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signup') Signup